<controls:ChildWindow x:Class="Web.Player.Core.View.Message.CustomMessageBox"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="469" Height="132" 
           Title="CutomMessageBox">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="Message" Grid.Row="0" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Left" Width="auto" />
        
        <Button x:Name="NoButton" Content="Non" Click="NoButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="YesButton" Content="Oui" Click="YesButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>